<%= form_for(@coach, html: { class: 'form-horizontal' }) do |f| %>
  <% if @coach.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@coach.errors.count, "error") %> prohibited this coach from being saved:</h2>

      <ul>
      <% @coach.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :image, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.file_field :image, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :name, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.text_field :name, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :business, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.text_field :business, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :street, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.text_field :street, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :city, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.text_field :city, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :state, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.select :state, Coach::STATES, {}, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :zip, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.text_field :zip, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :phone_number, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.text_field :phone_number, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :certifications, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.text_area :certifications, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :bio, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.text_area :bio, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :quote, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.text_field :quote, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :quoter, '- By', class: 'col-sm-offset-4 col-sm-2 control-label' %>
    <div class="col-sm-6">
      <%= f.text_field :quoter, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :shirt_size, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.select :shirt_size, Coach::SIZES, {}, class: 'form-control' %>
    </div>
  </div>

  <div class="actions">
    <%= f.submit class: 'btn btn-primary' %>
  </div>
<% end %>
