<div class="container-fluid no-pad landing"></div>
<div class="container information">
  <div class="signed_in">
    <%= link_to("", root_path, :class => 'logo') %>
    <ul class="register">
      <%= render 'devise/menu/registration_items' %>
    </ul>
    <div class="more">
      <a data-toggle="modal" data-target="#myModal">
        Learn more about MYPROTOCOL
      </a>
    </div>
    <!-- Button trigger modal -->


    <!-- Modal -->
    <div class="modal fade out" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            <h4 class="modal-title" id="myModalLabel">Modal title</h4>
          </div>
          <div class="modal-body">
            ...
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
          </div>
        </div>
      </div>
    </div>
  </div>
  <ul class="register">
    <%= render 'devise/menu/registration_items' %>
  </ul>
  <% if (user_signed_in? and !current_user.profile.nil? and !current_user.profile.new_record?) %>
    <div class="row">
      <div class="col-md-8 col-md-offset2">
        <div class="panel panel-default">
          <div class="panel-heading">
            <h3 class="panel-title">Report</h3>
          </div>
          <div class="panel-body">
            <h5>Estimated BMI:</h5> <%= current_user.profile.bmi.round 2 %>
            <h5>Estimated LBM:</h5> <%= current_user.profile.lbm.round 2 %>

            <h5>Recommendations</h5>
            <ul>
              <li>Protein: <%= current_user.profile.protein %></li>
              <li>BCAA: <%= current_user.profile.bcaa %></li>
              <li>Creatine: <%= current_user.profile.creatine %></li>
              <li>Fish Oil: <%= current_user.profile.fish_oil %></li>
            </ul>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  <div class="row">
    <div class="col-md-6">
      <h2>Nearest Coaches</h2>
    </div>
    <div class="col-md-6">
      <h2>Nearest Gyms</h2>
    </div>
  </div>
  <% @closest_coaches.zip(@closest_gyms).each do |coach, gym| %>
    <div class="row">
      <div class="col-md-6">
        <%= image_tag coach.image_url.to_s if coach.image_url.present? %>
        <p>
          Name: <%= coach.name %><br>
          Business: <%= coach.business %><br>
          Bio: <%= coach.bio %>
        </p>
      </div>
      <div class="col-md-6">
        <%= image_tag gym.image_url.to_s if gym.image_url.present? %>
        <p>
          Name: <%= gym.name %><br>
          <%= gym.street %><br>
          <%= gym.city %>, <%= gym.state %>, <%= gym.zip %>
        </p>
      </div>
    </div>
  <% end %>
</div>
